PHPLDAPADMIN_LDAP_HOSTS:
  - <%= envs["SAMBA_WORKGROUP"] %>:
    - server:
      - port: 0
      - host: <%= "#{envs["SAMBA_SERVER_URL_PORT"]}" %>
      - base: 
        - <%= envs["SAMBA_BASE_DN"] %>
      - force_may: array('uidNumber','gidNumber','sambaSID')
    - login:
      - bind_id: <%= envs["SAMBA_ADMIN_DN"] %>
      - bind_pass: <%= envs["SAMBA_ADMIN_PASSWORD"] %>
PHPLDAPADMIN_TRUST_PROXY_SSL: true
PHPLDAPADMIN_HTTPS: false
PHPLDAPADMIN_LDAP_HOSTS_FRIENDLY: true
PHPLDAPADMIN_LDAP_CLIENT_TLS: true
PHPLDAPADMIN_LDAP_CLIENT_TLS_REQCERT: allow
