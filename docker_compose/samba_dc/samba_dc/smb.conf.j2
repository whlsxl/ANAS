# Generated by entrypoint.sh. Add customizations under /etc/samba/conf.d.
#  DO NOT EDIT THIS FILE.

[global]
	netbios name = ${SAMBA_NETBIOS_NAME}
	realm = ${SAMBA_REALM}
	server role = active directory domain controller
	workgroup = ${SAMBA_WORKGROUP}

	allow dns updates = ${SMABA_ALLOW_DNS_UPDATES}
	dns forwarder = ${SMABA_DNS_FORWARDER}
	bind interfaces only = ${SAMBA_BIND_INTERFACES_ONLY}
	domain master = ${SAMBA_DOMAIN_MASTER}
	interfaces = ${SAMBA_INTERFACES}
	log level = ${SAMBA_LOG_LEVEL}
	log file = /var/log/samba/%m.log

	template shell = ${SAMBA_TEMPLATE_SHELL}
	template homedir = ${SAMBA_TEMPLATE_HOMEDIR}
	
	tls enabled  = yes
	tls keyfile  = /certs/${LEGO_KEY_NAME}
	tls certfile = /certs/${LEGO_CERT_NAME}
	tls cafile   = /certs/${LEGO_CA_CERT_NAME}